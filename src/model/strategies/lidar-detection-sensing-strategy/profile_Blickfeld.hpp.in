        /// detection_sensing_parameters

        Blickfeld.detection_sensing_parameters.max_echos_per_beam = 1;                      // maximum number of detections that are calculated per beam
        Blickfeld.detection_sensing_parameters.distance_resolution_adc = 0.03;              // Specified distance resolution of the adc in m, 0.3 means time resolution of 0.1 ns
        Blickfeld.detection_sensing_parameters.distance_resolution = 0.01;                  // Specified distance resolution of the sensor output in m
        Blickfeld.detection_sensing_parameters.distance_stddev = 0.0;                       // Specified distance standard deviation in m for gaussian noise model
        Blickfeld.detection_sensing_parameters.signal_strength_threshold_in_dBm = -120.0;   // Specified signal_strength threshold of the sensor at output in dBm (-120 dBm = 1 fW)
        Blickfeld.detection_sensing_parameters.echo_separation_distance = 5.0;              // Distance for separation of two echos in m, when no reflections registered in between
        Blickfeld.detection_sensing_parameters.pulse_duration_mean = 4.5;                   // Mean duration of the emitted laser pulse in ns
        Blickfeld.detection_sensing_parameters.pulse_duration_stddev = 0.5;                 // Standard deviation of the pulse duration of the emitted laser pulse in ns
        Blickfeld.detection_sensing_parameters.echo_determination_mode = "start";            // Determines what part of the echo pulse is taken for distance. Options: {"start" (default), "peak"}
        Blickfeld.detection_sensing_parameters.intensity_or_epw = 0;                        // 0: Detections with intensity in %, 1: Detections with echo pulse width (epw) in m
        Blickfeld.detection_sensing_parameters.range_compensate_intensity = false;           // Compensate intensity by range with a factor of range^4
        Blickfeld.detection_sensing_parameters.intensity_resolution = 0.01;                 // Specified intensity resolution of the sensor output in %
        Blickfeld.detection_sensing_parameters.intensity_stddev = 5.0;                      // Specified intensity standard deviation in %
